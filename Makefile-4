CC = g++
CFLAGS = -c -Wall -Wextra
SOURCES = source/main.cpp source/in_out.cpp source/solve.cpp source/tester.cpp source/utilities.cpp
OBJECTS = $(SOURCES: .cpp = .o)
EXECUTABLE = ss

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(OBJECTS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@

clean:
	rm -rf *.o ss
